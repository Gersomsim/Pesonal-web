---
import Layout from "./Layout.astro";
import BlogSidebar from "../components/BlogSidebar.astro";
import { getCollection } from 'astro:content';

const { content } = Astro.props;

// Obtener los últimos 5 posts para el aside
const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5)
  .filter(post => post.slug !== content.slug); // Excluir el post actual
---

<Layout title={content.data.title} description={content.data.description}>
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Contenido principal del post -->
      <main class="lg:col-span-3">
        <article class="  shadow-lg rounded-lg">
          <!-- Header del post -->
          <div class="p-8">
            <div class="flex items-center gap-2 mb-4">
              <div class="badge badge-primary">Blog</div>
              <span class="text-base-content/60 text-sm">
                <i class="fa-regular fa-calendar mr-1"></i>
                {content.data.pubDate.toLocaleDateString('es-ES', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </span>
            </div>
            
            <h1 class="text-4xl font-bold mb-4 leading-tight">
              {content.data.title}
            </h1>
            
            <p class="text-lg text-base-content/70 mb-6 leading-relaxed">
              {content.data.description}
            </p>
            
            <div class="flex items-center gap-4 mb-6">
              <div class="flex items-center gap-3">
                <div class="avatar placeholder">
                  <div class="bg-primary text-primary-content rounded-full w-12">
                    <span class="text-lg font-bold">
                      {content.data.author.charAt(0).toUpperCase()}
                    </span>
                  </div>
                </div>
                <div>
                  <p class="font-medium">
                    {content.data.author}
                  </p>
                  <p class="text-sm text-base-content/60">
                    Autor
                  </p>
                </div>
              </div>
              
              {content.data.tags && content.data.tags.length > 0 && (
                <div class="flex gap-2 ml-auto">
                  {content.data.tags.map((tag: string) => (
                    <div class="badge badge-outline badge-primary">
                      #{tag}
                    </div>
                  ))}
                </div>
              )}
            </div>
          </div>
          
          <!-- Contenido del post -->
          <div class="px-8 pb-8 prose prose-lg max-w-none">
            <slot />
          </div>
        </article>

        <!-- Navegación entre posts -->
        <div class="flex justify-between mt-8">
          <a href="/blog" class="btn btn-outline">
            <i class="fa-solid fa-arrow-left mr-2"></i>
            Volver al blog
          </a>
          
          <div class="flex gap-2">
            <button class="btn btn-outline btn-sm" disabled>
              <i class="fa-solid fa-chevron-left mr-1"></i>
              Anterior
            </button>
            <button class="btn btn-outline btn-sm" disabled>
              Siguiente
              <i class="fa-solid fa-chevron-right ml-1"></i>
            </button>
          </div>
        </div>
      </main>
      
      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <BlogSidebar 
          currentPostSlug={content.slug}
          showSearch={true}
          showRecentPosts={true}
          showTags={true}
          showAuthor={true}
          showNewsletter={true}
        />
      </aside>
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>